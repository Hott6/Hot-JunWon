<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.onboarding.OnBoardingFragmentOne">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_github"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:padding="2dp"
        android:src="@drawable/img_github"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:shapeAppearanceOverlay="@style/CornerSize50Percent"
        app:strokeColor="@color/sopt_main_purple"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:text="@string/lets_start_github"
        android:textAlignment="center"
        android:textColor="@color/sopt_main_purple"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_github"
        app:layout_constraintStart_toStartOf="@+id/iv_github"
        app:layout_constraintTop_toBottomOf="@+id/iv_github" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:paddingVertical="@dimen/margin_10"
        android:text="@string/start_github"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>